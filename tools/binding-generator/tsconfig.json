{
    "include": ["./src/**/*", "./../json-schema-parser/src_ts/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./build/",
        "module": "commonjs",
        "target": "es5",
        "lib": ["dom", "es2015", "es2016", "es2017", "esnext"],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "typeRoots": [
            "node_modules/@types",
            "src/@types",
            "../json-schema-parser/src_ts/@types"
        ]
    }
}
